<Window x:Class="easysave.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:easysave"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1300">
    <Grid Background="#FFE1E8FF">
        <Canvas>
            <Image Height="354" Canvas.Left="450" Source="/Assets/easysave.png" Stretch="Fill" Canvas.Top="25" Width="400" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="initSaveWork" Content="Liste des travaux de sauvegarde" HorizontalAlignment="Center" VerticalAlignment="Top" Height="45" Width="348" FontSize="16" Background="WhiteSmoke" FontWeight="Bold" Canvas.Left="476" Canvas.Top="384" Click="initSaveWork_Click"/>
            <Button x:Name="initSlotCreation" Content="Créer un travail de sauvegarde" HorizontalAlignment="Center" VerticalAlignment="Top" Height="45" Width="348" FontSize="16" Background="WhiteSmoke" FontWeight="Bold" Click="initSlotCreation_Click" Canvas.Left="476" Canvas.Top="434"/>
            <Button x:Name="initSettings" Content="Paramètres" HorizontalAlignment="Center" VerticalAlignment="Top" Height="45" Width="348" FontSize="16" Background="WhiteSmoke" FontWeight="Bold" Click="initSettings_Click" Canvas.Left="476" Canvas.Top="484"/>
            <Button x:Name="initLeave" Content="Quitter" HorizontalAlignment="Center" VerticalAlignment="Top" Height="45" Width="348" FontSize="16" Background="WhiteSmoke" FontWeight="Bold" Click="initLeave_Click" Canvas.Left="476" Canvas.Top="534"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="25" Width="108" FontSize="16" TextAlignment="Center" FontWeight="Bold" RenderTransformOrigin="0.519,-0.55" Canvas.Top="659"><Run Language="fr-fr" Text="Version 3.0"/></TextBlock>
            <Frame x:Name="MainMenu" NavigationUIVisibility="Hidden"/>
        </Canvas>
    </Grid>
</Window>
